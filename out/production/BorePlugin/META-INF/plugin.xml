<idea-plugin version="2">
    <id>com.your.company.unique.plugin.id</id>
    <name>LayoutCreator</name>
    <version>1.0</version>
    <vendor email="loveghs@163.com" url="https://github.com/boredream/BorePlugin">Github</vendor>

    <description><![CDATA[
      auto generator findViewById code in Activity or Adapter(ViewHolder)
    ]]></description>

    <change-notes><![CDATA[
      first version<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="103.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="BorePlugin.LayoutCreator" class="action.LayoutCreatorAction" text="LayoutCreator"
                description="auto create layout code for Activity">
            <add-to-group group-id="CodeMenu" anchor="last"/>
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>